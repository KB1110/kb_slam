<?xml version="1.1" encoding="UTF-8"?>

<robot xmlns:xacro="https://www.ros.org/wiki/xacro">
    <link name = "base_footprint"/>

    <link name = "base_link">
        <visual>
            <geometry>
                <box size = "0.2 0.1 0.05"/>
            </geometry>

            <material name="blue" />

            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size = "0.2 0.1 0.05"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass = "0.5" length = "0.2" breadth = "0.1" height = "0.05" x = "0.0" y = "0.0" z = "0.0" roll = "0.0" pitch = "0.0" yaw = "0.0" />
    </link>

    <gazebo reference="base_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <joint name="base_joint" type="fixed">
        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.045"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.045" length="0.02"/>
            </geometry>

            <material name = "black" />

            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.045" length="0.02"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass = "0.1" radius = "0.045" length = "0.02" x = "0.0" y = "0.0" z = "0.0" roll = "0.0" pitch = "0.0" yaw = "0.0" />

    </link>

    <joint name="left_wheel_joint" type="continuous">
        <origin xyz="-0.05 0.06 0.0" rpy="${-pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14159265" upper="3.14159265" effort="1.0" velocity="1.0" />
    </joint>

    <gazebo reference="left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.045" length="0.02"/>
            </geometry>

            <material name = "black" />

            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.045" length="0.02"/>
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass = "0.1" radius = "0.045" length = "0.02" x = "0.0" y = "0.0" z = "0.0" roll = "0.0" pitch = "0.0" yaw = "0.0" />

    </link>

    <joint name="right_wheel_joint" type="continuous">
        <origin xyz="-0.05 -0.06 0.0" rpy="${-pi/2} 0.0 0.0"/>
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <axis xyz="0 0 1"/>
        <limit lower="-3.14159265" upper="3.14159265" effort="1.0" velocity="1.0" />
    </joint>

    <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <link name="caster_wheel">
        <visual>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>

            <material name = "black" />

            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <sphere radius="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass = "0.01" radius = "0.01" x = "0.0" y = "0.0" z = "0.0" roll = "0.0" pitch = "0.0" yaw = "0.0" />

    </link>

    <joint name="caster_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_wheel"/>
        <origin xyz="0.05 0.0 -0.035" rpy="0.0 0.0 0.0"/>
    </joint>

    <gazebo reference="caster_wheel">
        <material>Gazebo/Black</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>